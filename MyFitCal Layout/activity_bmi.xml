<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sebz.MyFitCal.bmi"
    android:background="#3495ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bmi_title_text"
        android:id="@+id/bmi_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/weight_text"
        android:id="@+id/bmi_weight_view"
        android:layout_below="@+id/bmi_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bmi_weight_num"
        android:layout_alignTop="@+id/bmi_weight_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:background="#fff"
        android:gravity="center|end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/pounds_text"
        android:id="@+id/bmi_pounds_view"
        android:layout_below="@+id/bmi_weight_num"
        android:layout_alignRight="@+id/bmi_weight_num"
        android:layout_alignEnd="@+id/bmi_weight_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/height_text"
        android:id="@+id/bmi_height_view"
        android:layout_below="@+id/bmi_weight_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bmi_feet_num"
        android:layout_alignBottom="@+id/bmi_height_view"
        android:layout_alignLeft="@+id/bmi_weight_num"
        android:layout_alignStart="@+id/bmi_weight_num"
        android:width="100dp"
        android:background="#fff"
        android:gravity="center|end" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bmi_inch_num"
        android:layout_alignTop="@+id/bmi_feet_num"
        android:layout_alignRight="@+id/bmi_weight_num"
        android:layout_alignEnd="@+id/bmi_weight_num"
        android:width="100dp"
        android:background="#fff"
        android:gravity="center|end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/feet_text"
        android:id="@+id/bmi_feet_view"
        android:layout_below="@+id/bmi_feet_num"
        android:layout_alignRight="@+id/bmi_feet_num"
        android:layout_alignEnd="@+id/bmi_feet_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/inches_text"
        android:id="@+id/bmi_inch_view"
        android:layout_below="@+id/bmi_inch_num"
        android:layout_alignRight="@+id/bmi_inch_num"
        android:layout_alignEnd="@+id/bmi_inch_num" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate_calories_text"
        android:id="@+id/bmi_calc_button"
        android:width="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bmi_answer_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/bmi_feet_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bmi_diagnostic_view"
        android:layout_below="@+id/bmi_answer_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_text"
        android:id="@+id/bmi_reset_button"
        android:layout_alignBottom="@+id/bmi_calc_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:width="150dp" />

</RelativeLayout>
