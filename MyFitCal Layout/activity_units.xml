<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sebz.MyFitCal.units"
    android:background="#555555">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mass"
        android:id="@+id/unit_weight_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#fff" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unit_weight_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/unit_radio_weight_group"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pounds"
            android:checked="false"
            android:id="@+id/unit_pound_button"
            android:width="100dp"
            android:background="#fff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grams"
            android:id="@+id/unit_kg_button"
            android:singleLine="false"
            android:width="100dp"
            android:background="#fff" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lenght"
        android:id="@+id/unit_height_view"
        android:layout_below="@+id/unit_radio_weight_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#fff" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unit_height_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/unit_radio_height_group"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inches_text"
            android:checked="false"
            android:id="@+id/unit_inches_button"
            android:width="100dp"
            android:background="#fff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meters"
            android:id="@+id/unit_meters_button"
            android:background="#fff"
            android:width="100dp" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="done"
        android:id="@+id/unit_change_button"
        android:layout_below="@+id/unit_radio_height_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />
</RelativeLayout>
